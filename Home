    <script>


        function submitForm(formId) {
            document.getElementById(formId).submit();
        }
        console.log('hello', '{{ data }}');

        document.addEventListener('DOMContentLoaded', function() {
        try {
         var data1 = '{{data}}' 
         console.log(data1)      
 


            if (data1 === 'road1') {
                document.querySelectorAll('[name="traffic-light-color"]').forEach(function(btn) {
                btn.style.backgroundColor = 'red';
            });
                document.getElementById('s1color3').style.backgroundColor = 'rgb(4, 255, 4)';
                document.getElementById('s1color1').style.backgroundColor = '';
                document.getElementById('s3color3').style.backgroundColor = '';
                document.getElementById('s2color3').style.backgroundColor = '';
                document.getElementById('s4color3').style.backgroundColor = '';
            } else if (data1 === 'road2') {
                document.querySelectorAll('[name="traffic-light-color"]').forEach(function(btn) {
                btn.style.backgroundColor = 'red';
            });
                document.getElementById('s2color3').style.backgroundColor = 'rgb(4, 255, 4)';
                document.getElementById('s2color1').style.backgroundColor = '';
                document.getElementById('s1color3').style.backgroundColor = '';
                document.getElementById('s3color3').style.backgroundColor = '';
                document.getElementById('s4color3').style.backgroundColor = '';
            } else if (data1 === 'road3') {
                document.querySelectorAll('[name="traffic-light-color"]').forEach(function(btn) {
                btn.style.backgroundColor = 'red';
            });
                document.getElementById('s3color3').style.backgroundColor = 'rgb(4, 255, 4)';
                document.getElementById('s3color1').style.backgroundColor = '';
                document.getElementById('s1color3').style.backgroundColor = '';
                document.getElementById('s2color3').style.backgroundColor = '';
                document.getElementById('s4color3').style.backgroundColor = '';
            } else if (data1 === 'road4') {
                document.querySelectorAll('[name="traffic-light-color"]').forEach(function(btn) {
                btn.style.backgroundColor = 'red';
            });
                document.getElementById('s4color3').style.backgroundColor = 'rgb(4, 255, 4)';
                document.getElementById('s4color1').style.backgroundColor = '';
                document.getElementById('s1color3').style.backgroundColor = '';
                document.getElementById('s2color3').style.backgroundColor = '';
                document.getElementById('s3color3').style.backgroundColor = '';
            }
        } catch(err) {
            console.log('Error:', err);
        }

    });   
    </script>
